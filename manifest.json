{
	"manifest_version": 2,
	"name": "linkcart",
	"description": "Linkcart allows you to shortlist multiple tabs so you can copy all tabs urls( links ) at once.",
	"version": "1.0.1",
	"icons": {
		"128": "images/icons/icon-128.png"
	},
	"background": {
		"page": "views/background.html",
		"persistent": false
	},
	"browser_action": {
		"default_icon": "images/icons/icon.png",
		"default_popup": "views/popup.html",
		"default_title": "linkcart"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"activeTab",
		"contextMenus",
		"storage"
	]
}